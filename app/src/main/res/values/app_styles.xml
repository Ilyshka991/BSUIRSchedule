<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">?attr/primaryColor</item>
        <item name="colorPrimaryDark">?attr/primaryDarkColor</item>
        <item name="colorAccent">?attr/accentColor</item>
        <item name="colorControlHighlight">?attr/rippleColor</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:background">@color/transparent</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:background">@drawable/background_splash</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor" tools:targetApi="21">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>


    <!-- Theme colors -->

    <style name="LightStyleTheme">
        <item name="android:background">@color/transparent</item>

        <item name="primaryColor">@color/grey_400</item>
        <item name="primaryDarkColor">@color/grey_600</item>
        <item name="accentColor">@color/amber_200</item>

        <item name="backgroundColor">@color/white</item>
        <item name="secondBackgroundColor">@color/grey_100</item>
        <item name="backgroundDarkColor">@color/grey_800</item>
        <item name="rippleColor">@color/grey_300</item>
        <item name="dividerColor">?attr/primaryColor</item>
        <item name="backgroundNavigationSwipeActionColor">@color/amber_100</item>

        <item name="buttonDefaultBackgroundColor">@color/transparent</item>
        <item name="buttonSelectedBackgroundColor">@color/grey_300</item>
        <item name="buttonEnabledTextColor">@color/grey_600</item>
        <item name="buttonDisabledTextColor">?attr/textSemiBoldColor</item>
        <item name="chipCheckedColor">@color/grey_300</item>
        <item name="chipUncheckedColor">@color/grey_100</item>

        <item name="textDefaultColor">@color/grey_600</item>
        <item name="textSemiBoldColor">@color/grey_800</item>
        <item name="titleColor">@color/grey_700</item>
        <item name="tabSelectedColor">?attr/textDefaultColor</item>
        <item name="tabUnselectedColor">@color/grey_400</item>
        <item name="textErrorColor">@color/amber_900</item>

        <item name="menuIconColor">?attr/backgroundColor</item>
        <item name="fabBackgroundColor">@color/amber_500</item>

        <item name="scheduleItemBackgroundColor">?attr/backgroundColor</item>


        <item name="indicatorDefaultColor">@color/grey_300</item>
        <item name="indicatorSelectedColor">@color/grey_700</item>
        <item name="locationIconTintColor">@color/red_500</item>
    </style>

