<resources>

    <!-- Button styles -->

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/text_button_color</item>
        <item name="rippleColor">?attr/rippleColor</item>
    </style>

    <style name="NavigationButton" parent="TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:checkable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">?attr/buttonEnabledTextColor</item>
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
    </style>

    <style name="IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:tint">?attr/menuIconColor</item>
        <item name="rippleColor">?attr/rippleColor</item>
    </style>

    <!-- Text styles -->

    <style name="DefaultText" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/textDefaultColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ChipTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/textDefaultColor</item>
        <item name="boxStrokeColor">?attr/textDefaultColor</item>
    </style>

    <style name="AutoValidateTextInputLayout" parent="OutlinedTextInputLayout">
        <item name="errorTextColor">?attr/textErrorColor</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="errorIconTint">?attr/textErrorColor</item>
        <item name="errorTextAppearance">@style/AutoValidateTextErrorAppearance</item>
        <item name="hintTextAppearance">@style/AutoValidateTextHintAppearance</item>
        <item name="background">@null</item>
    </style>

    <style name="AutoValidateTextErrorAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AutoValidateTextHintAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInput" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/textDefaultColor</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
