<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingTop="8dp"
    android:paddingEnd="20dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/lessonDetailsLocationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        android:tint="?attr/locationIconTintColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lessonDetailsLocationAuditoryName"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="start"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/lessonDetailsLocationAuditoryType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lessonDetailsLocationIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123-4" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lessonDetailsLocationAuditoryType"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="start"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/lessonDetailsLocationAuditoryDepartment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lessonDetailsLocationIcon"
        app:layout_constraintTop_toBottomOf="@id/lessonDetailsLocationAuditoryName"
        tools:text="Type" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lessonDetailsLocationAuditoryDepartment"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="start"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/lessonDetailsLocationAuditoryNote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lessonDetailsLocationIcon"
        app:layout_constraintTop_toBottomOf="@id/lessonDetailsLocationAuditoryType"
        tools:text="Department" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lessonDetailsLocationAuditoryNote"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="start"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lessonDetailsLocationIcon"
        app:layout_constraintTop_toBottomOf="@id/lessonDetailsLocationAuditoryDepartment"
        tools:text="Note" />


</androidx.constraintlayout.widget.ConstraintLayout>