<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.pechuro.bsuirschedule.ui.fragment.drawer.DrawerFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/text_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No Schedules"
            android:textSize="24sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nav_item_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toTopOf="@+id/nav_footer_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/nav_footer_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/nav_item_list"
            app:layout_constraintStart_toStartOf="@+id/nav_item_list">

            <Button
                android:id="@+id/nav_footer_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings" />

            <Button
                android:id="@+id/nav_footer_add_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add schedule" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>