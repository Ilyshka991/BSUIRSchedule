<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/suggestionGroupNumber"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="750502" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/suggestionGroupFacultyAbbreviation"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="24dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/suggestionGroupNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/suggestionGroupNumber"
        tools:text="ФКСиС" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/suggestionGroupSpecialityAbbreviation"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/suggestionGroupNumber"
        app:layout_constraintTop_toBottomOf="@+id/suggestionGroupNumber"
        tools:text="ВМСиС" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/suggestionGroupEducationForm"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/suggestionGroupSpecialityAbbreviation"
        app:layout_constraintStart_toEndOf="@+id/suggestionGroupSpecialityAbbreviation"
        tools:text="Очная" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/suggestionGroupCourse"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/suggestionGroupEducationForm"
        app:layout_constraintStart_toEndOf="@+id/suggestionGroupEducationForm"
        tools:text="Course: 3" />
</androidx.constraintlayout.widget.ConstraintLayout>