<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/image_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/item_classes_type_icon_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_type_unknown" />

        <TextView
            android:id="@+id/text_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@{data.subject}"
            app:layout_constraintStart_toEndOf="@+id/image_type"
            app:layout_constraintTop_toTopOf="@+id/image_type"
            tools:text="Subject" />

        <TextView
            android:id="@+id/text_week_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_subject"
            app:layout_constraintStart_toEndOf="@+id/text_subject"
            tools:text="Weeks" />

        <TextView
            android:id="@+id/text_subgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_week_number"
            app:layout_constraintStart_toEndOf="@+id/text_week_number"
            tools:text="Subgroup" />

        <TextView
            android:id="@+id/text_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.startTime}"
            app:layout_constraintBottom_toBottomOf="@+id/text_subgroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Time start" />

        <TextView
            android:id="@+id/text_auditory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/text_subject"
            app:layout_constraintTop_toBottomOf="@+id/text_subject"
            tools:text="Auditory" />

        <TextView
            android:id="@+id/text_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@+id/text_auditory"
            app:layout_constraintTop_toTopOf="@+id/text_auditory"
            tools:text="Employee" />

        <TextView
            android:id="@+id/text_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.endTime}"
            app:layout_constraintStart_toStartOf="@+id/text_time_start"
            app:layout_constraintTop_toTopOf="@+id/text_employee"
            tools:text="Time end" />

        <TextView
            android:id="@+id/text_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/image_type"
            app:layout_constraintTop_toBottomOf="@+id/text_auditory"
            tools:text="Note" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>