<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/staffAuditoryName"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="112-4" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/staffAuditoryCapacity"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="8dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/staffAuditoryDepartment"
        app:layout_constraintTop_toBottomOf="@+id/staffAuditoryDepartment"
        tools:text="capacity:5" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/staffAuditoryType"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/staffAuditoryName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/staffAuditoryName"
        tools:text="type: lk" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/staffAuditoryDepartment"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="8dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/staffAuditoryName"
        app:layout_constraintTop_toBottomOf="@+id/staffAuditoryName"
        tools:text="Department" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/staffAuditoryNote"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/staffAuditoryDepartment"
        app:layout_constraintTop_toBottomOf="@+id/staffAuditoryCapacity"
        tools:text="note" />
</androidx.constraintlayout.widget.ConstraintLayout>